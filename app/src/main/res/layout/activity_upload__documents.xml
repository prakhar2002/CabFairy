<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Upload_Documents">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrolling">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/round_blue">
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logo_layouts1"
                android:layout_marginTop="10dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/taxi"/>
            </RelativeLayout>
            <!-- -->

            <!-- -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"

                android:id="@+id/regist_layout"
                android:padding="10dp"
                android:background="@drawable/whitee"
                android:layout_below="@id/logo_layouts1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:id="@+id/forntside"
                        android:text="Upload Photo"
                        android:textColor="#000"
                        android:textSize="18dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/whitee"
                            android:visibility="gone"
                            android:id="@+id/profile_image"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:id="@+id/get_image_from_gallery"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/folder_img"
                                    />

                                <TextView
                                    android:text="Browse File"
                                    android:layout_width="70dp"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:id="@+id/backside"
                        android:text="Upload Photo"
                        android:textColor="#000"
                        android:textSize="18dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/whitee"
                            android:visibility="gone"
                            android:id="@+id/student_sign"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <LinearLayout
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:id="@+id/get_student_sign"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp">
                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="40dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/folder_img"
                                    />
                                <TextView
                                    android:text="Browse File"
                                    android:layout_width="70dp"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/card_num"
                                android:padding="3dp"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginRight="5dp"
                                android:inputType="number"
                                android:layout_marginTop="10dp"
                                android:textSize="8dp"
                                android:maxLength="20"
                                android:visibility="visible"
                                app:met_floatingLabel="normal"
                                android:hint="Card Number"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:visibility="gone"
                                android:id="@+id/card_num1"
                                android:text=""
                                android:padding="5dp"
                                android:textColor="#000"
                                android:textSize="18dp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/issue_date"
                                android:padding="3dp"
                                android:fontFamily="@font/montserrat"
                                android:layout_marginLeft="5dp"
                                android:inputType="number"
                                android:layout_marginTop="10dp"
                                android:textSize="8dp"
                                android:maxLength="10"
                                app:met_floatingLabel="normal"
                                android:hint="Issued date of Card DD-MM-YYYY"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:visibility="gone"
                                android:id="@+id/issue_date1"
                                android:text=""
                                android:padding="5dp"
                                android:textColor="#000"
                                android:textSize="18dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name"
                        android:padding="3dp"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginRight="5dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:textSize="8dp"
                        android:maxLength="20"
                        app:met_floatingLabel="normal"
                        android:hint="Name On Card"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:visibility="visible"
                        android:id="@+id/name1"
                        android:text=""
                        android:padding="5dp"
                        android:textColor="#000"
                        android:textSize="18dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:baselineAligned="false">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:textColor="#fff"
                                    android:id="@+id/qurey_submit1"
                                    android:textStyle="bold"
                                    android:text="Resend"
                                    android:gravity="center"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textAllCaps="false"
                                    android:background="@drawable/blue"
                                    />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:textColor="#fff"
                                    android:id="@+id/submit_register1"
                                    android:textStyle="bold"
                                    android:text="Approved"
                                    android:gravity="center"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/montserrat"
                                    android:textAllCaps="false"
                                    android:background="@drawable/blue"
                                    />
                            </RelativeLayout>
                        </LinearLayout>


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="#fff"
                            android:id="@+id/submit_register"
                            android:textStyle="bold"
                            android:text="Submit"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:fontFamily="@font/montserrat"
                            android:textAllCaps="false"

                            android:background="@drawable/blue"
                            />
                       <!-- <Button
                            android:id="@+id/submit"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/blue"
                            android:fontFamily="@font/montserrat"
                            android:text="Submit"
                            android:textColor="#FFF" />-->
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <!--  -->


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>